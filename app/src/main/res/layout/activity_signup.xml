<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.example.dalia.notes.signup">

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="57dp"
        app:srcCompat="@drawable/notes"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/usernamesign"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"

        android:layout_marginEnd="32dp"
        android:layout_marginTop="213dp"
        android:backgroundTint="#236B82"
        android:ems="10"
        android:hint="USERNAME"
        android:inputType="textPersonName"
        android:textAllCaps="false"
        android:textColor="#000"
        android:textColorHint="#3c3f41"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/passsign"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/usernamesign"
        android:layout_alignStart="@+id/usernamesign"
        android:layout_below="@+id/usernamesign"
        android:layout_marginTop="25dp"
        android:backgroundTint="#1B2DDA"
        android:ems="10"
        android:hint="PASSWORD"
        android:inputType="textPassword"
        android:textAllCaps="false"
        android:textColor="#000"
        android:textColorHint="#3c3f41"
        android:textSize="12sp" />

    <Button
        android:id="@+id/signupp2a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="#1B2DDA"
        android:text="SIGH UP"
        android:textColor="#FFF"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_below="@+id/passsign"
        android:layout_alignLeft="@+id/passsign"
        android:layout_alignStart="@+id/passsign"
        android:layout_marginLeft="68dp"
        android:layout_marginStart="68dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/usernamesign"
        android:layout_toLeftOf="@+id/usernamesign"
        android:layout_toStartOf="@+id/usernamesign"
        app:srcCompat="@drawable/users" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/passsign"
        android:layout_toLeftOf="@+id/passsign"
        android:layout_toStartOf="@+id/passsign"
        app:srcCompat="@drawable/locked" />

</RelativeLayout>
