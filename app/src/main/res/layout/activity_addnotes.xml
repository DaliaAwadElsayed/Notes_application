<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.example.dalia.notes.addnotes">

    <EditText
        android:id="@+id/notename"
        android:layout_width="260dp"
        android:layout_height="35dp"


        android:layout_alignBottom="@+id/descrption"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="135dp"
        android:background="@drawable/round"
        android:ems="10"
        android:hint=" NOTES NAME"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textColorHint="#f2f2f2"
        android:textSize="14sp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/descrption"
        android:layout_width="250dp"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"

        android:layout_centerHorizontal="true"
        android:layout_marginBottom="134dp"
        android:background="@drawable/bliue"
        android:ems="10"
        android:hint=" DESCRPTION"
        android:textAlignment="center"
        android:textColor="#1B2DDA"
        android:textColorHint="#818ef4"
        android:textSize="13sp" />

    <Button
        android:id="@+id/save"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="69dp"
        android:background="@drawable/round"
        android:text="Save"
        android:textColor="#fff"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/myimage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/notename"
        android:layout_alignEnd="@+id/descrption"
        android:layout_alignLeft="@+id/notename"
        android:layout_alignRight="@+id/descrption"
        android:layout_alignStart="@+id/notename"
        android:layout_marginBottom="14dp"
        app:srcCompat="@drawable/gallery" />

</RelativeLayout>
